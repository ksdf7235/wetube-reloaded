extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="post",enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", required, id="video", name="video") 
        input(placeholder="title", type="text",required, name="title")
        input(placeholder="Description", type="text",required, name="description")
        input(placeholder="Hashtags,separated by comma." type="text",required, name="hashtags")
        input(type="submit" value="Upload Video")